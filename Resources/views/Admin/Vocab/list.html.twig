{% extends "TaxonomyBundle::layout.html.twig" %}

{% block page_title %}Vocabularies{% endblock %}

{% block content %}
    <a href="{{ path('taxonomy_admin_vocab_add') }}" class="btn btn-primary btn-sm">
        <span class="glyphicon glyphicon-plus"></span>
        <strong>Add Vocabulary</strong>
    </a>
    <table class="table table-striped table-hover">
        <thead>
            <th>Label</th>
            <th>Description</th>
            <th>Actions</th>
        </thead>
        <tbody>
        {% for vocab in vocabs %}
            <tr>
                <td>{{ vocab.label }}</td>
                <td>{{ vocab.desc }}</td>
                <td>
                    <div class="btn-group">
                        <a title="List terms" href="{{ path('taxonomy_admin_term_list', {'vocabName': vocab.name}) }}" class="btn btn-info btn-sm">
                            <span class="glyphicon glyphicon-th-list"></span>
                            <span class="text-hide">List terms</span>
                        </a>
                        <a title="Edit vocabulary" href="{{ path('taxonomy_admin_vocab_edit', {'vocabName': vocab.name}) }}" class="btn btn-primary btn-sm">
                            <span class="glyphicon glyphicon-pencil"></span>
                            <span class="text-hide">Edit</span>
                        </a>
                        <a title="Delete vocabulary" href="{{ path('taxonomy_admin_vocab_delete', {'vocabName': vocab.name}) }}" class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-trash"></span>
                            <span class="text-hide">Delete</span>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">
                    <em>There are currently no vocabularies.</em>
                    <a href="{{ path('taxonomy_admin_vocab_add') }}">Add a vocabulary.</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
